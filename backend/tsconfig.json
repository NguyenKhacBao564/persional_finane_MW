{
  "compilerOptions": {
    "target": "ES2022",       // Nâng lên bản mới hơn cho tối ưu
    "module": "NodeNext",     // QUAN TRỌNG: Dùng chuẩn module mới nhất
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@routes/*": ["src/routes/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
